{
    "compilerOptions": {
        "lib": [
            "es2021",
            "DOM"
        ],
        "target": "es6",
        "moduleResolution": "node16",
        "module": "CommonJS",
        "outDir": "./dist/",
        "declarationDir": "./dist/types",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "checkJs": true,
        "allowJs": true,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "files": [
        "./src/index.ts",
    ]
}